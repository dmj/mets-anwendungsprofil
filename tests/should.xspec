<description schematron="../source/profile.sch"
             xmlns="http://www.jenitennison.com/xslt/xspec"
             xmlns:mets="http://www.loc.gov/METS/"
             xmlns:xlink="http://www.w3.org/1999/xlink">

  <param name="phase" select="'SHOULD'"/>

  <scenario label="Testing restrictions of the metsHdr element">
    <scenario label="the metsHdr does not have a @LASTMODDATE attribute">
      <context>
        <mets:mets>
          <mets:metsHdr/>
        </mets:mets>
      </context>
      <expect-assert id="metsHdr.assert.4"/>
    </scenario>
    <scenario label="the metsHdr has a @LASTMODDATE attribute">
      <context>
        <mets:mets>
          <mets:metsHdr LASTMODDATE="2018-11-27T13:05:16Z"/>
        </mets:mets>
      </context>
      <expect-not-assert id="metsHdr.assert.4"/>
    </scenario>
  </scenario>
  <scenario label="Testing the restrictions of the structMap element">
    <scenario label="the fptr does not have an @ID attribute">
      <context>
        <mets:mets>
          <mets:structMap TYPE="PHYSICAL">
            <mets:div TYPE="physSequence">
              <mets:div TYPE="page">
                <mets:fptr/>
              </mets:div>
            </mets:div>
          </mets:structMap>
        </mets:mets>
      </context>
      <expect-assert id="structMap.assert.8"/>
    </scenario>
    <scenario label="the fptr has an @ID attribute">
      <context>
        <mets:mets>
          <mets:structMap TYPE="PHYSICAL">
            <mets:div TYPE="physSequence">
              <mets:div TYPE="page">
                <mets:fptr ID="fptr"/>
              </mets:div>
            </mets:div>
          </mets:structMap>
        </mets:mets>
      </context>
      <expect-not-assert id="structMap.assert.8"/>
    </scenario>
  </scenario>

</description>
