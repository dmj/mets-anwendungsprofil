    <structural_requirements>
        <metsRootElement>
            <requirement>
                <description>
                    <html:p>Das Wurzelelement enthält den lokalen Identifikator des Objekts im @OBJID- und einen das Objekt identifizierenden Namen imd @LABEL-Attribut. Der Wert des @LABEL wird in der Regel aus dem Namen der besitzenden Einrichtung und der Signatur der Objektvorlage gebildet.</html:p>
                    <html:p>
                        <html:samp>&lt;mets:mets OBJID="drucke/textb-680-1" LABEL="Herzog August Bibliothek Wolfenbüttel, Textb. 680 (1)"&gt;</html:samp>
                    </html:p>
                </description>
                <tests>
                    <test TESTLANGUAGE="Schematron">
                        <testWrap>
                            <testXML>
                                <sch:rule context="mets:mets">
                                    <sch:assert test="normalize-space(@OBJID)" id="metsRootElement.assert.1">
                                        Die Angabe eines lokalen Identifikators ist verpflichtend.
                                    </sch:assert>
                                    <sch:assert test="normalize-space(@LABEL)" id="metsRootElement.assert.2">
                                        Die Angabe eines identifizierenden Namens ist verpflichtend.
                                    </sch:assert>
                                </sch:rule>
                            </testXML>
                        </testWrap>
                    </test>
                </tests>
            </requirement>
        </metsRootElement>
    </structural_requirements>
